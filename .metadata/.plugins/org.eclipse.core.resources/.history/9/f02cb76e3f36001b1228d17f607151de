package View;

import Modelos.Conta;

public class Main {

	public static void main (String args[]) {
		
		Conta c1 = new Conta(100.00);
		
		c1.setAgencia(1);
		c1.setConta(1);
		c1.setCPF("174.492.448-10");
		c1.setTitular("Flávio Queiroz");
		
		System.out.println("***** Saldo na abertura da conta *****");
		System.out.println(c1.MotrarDadosdaConta());
		
		c1.Depositar(100.00);
		System.out.println("***** Saldo após depositar R$ 100,00 *******");
		System.out.println(c1.MotrarDadosdaConta());
		
		if (c1.Sacar(50.0) == true) {
			System.out.println("***** Saldo após sacar R$ 50,00 *******");
			System.out.println(c1.MotrarDadosdaConta());
		}
		
		System.out.println("***** Tentativa de sacar R$ 300,00 *******");
		if (c1.Sacar(300.0) == false) {			
			System.out.println("Não foi possível sacar R$ 300,00 devido saldo insuficiente");			
		}
		System.out.println(c1.MotrarDadosdaConta());
		
		System.out.println("***** Tentativa de transferir o Saldo Existe para uma nova Conta *******");
		Conta c2 = new Conta(0);
		if (c1.Transferir(c2, c1.getSaldo())==true) {
			System.out.println("Transferência realizada com sucesso! ");
			c1.MotrarDadosdaConta();
			c2.MotrarDadosdaConta();
		}
		else {
			System.out.println("Transferência NÃO realizada com sucesso! ");
			c1.MotrarDadosdaConta();
			c2.MotrarDadosdaConta();
		}
		
		
		
		
	}
}
